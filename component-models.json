  {
    "id": "carousel-item",
    "fields": [
      {
        "component": "select",
        "name": "mediaType",
        "label": "Media Type",
        "value": "image",
        "valueType": "string",
        "options": [
          {
            "name": "Image",
            "value": "image"
          },
          {
            "name": "Video",
            "value": "video"
          }
        ],
        "default": "image"
      },
      {
        "component": "reference",
        "name": "mediaImage",
        "label": "Image",
        "valueType": "string",
        "multi": false,
        "required": false,
        "condition": {
          "===": [
            {
              "var": "mediaType"
            },
            "image"
          ]
        }
      },
      {
        "component": "reference",
        "name": "mediaVideo",
        "label": "Video",
        "valueType": "string",
        "multi": false,
        "required": false,
        "condition": {
          "===": [
            {
              "var": "mediaType"
            },
            "video"
          ]
        }
      },
      {
        "component": "text",
        "name": "altText",
        "label": "Alt Text",
        "valueType": "string",
        "required": true,
        "validation": {
          "customErrorMsg": "Please enter alt text"
        }
      },
      {
        "component": "aem-content",
        "name": "link",
        "label": "Link",
        "valueType": "string",
        "valueFormat": "regexp",
        "validation": {
          "regExp": "^(https?://[^\\s/$.?#].[^\\s]*|/[^\\s]*|#[^\\s]*|mailto:[^\\s@]+@[^\\s@]+\\.[^\\s@]+|tel:[+]?[0-9\\s\\-\\(\\)]+)$",
          "customErrorMsg": "Please enter a valid URL format"
        }
      },
      {
        "component": "text",
        "name": "title",
        "label": "Title",
        "valueType": "string"
      },
      {
        "component": "text",
        "name": "description",
        "label": "Description",
        "valueType": "string"
      },
      {
